readatari:
    in a,(ATARI)
    bit 0,a
    ld a,0xff
    jr z,bit0z
    and a,0xf8
bit0z:
    ld e,a
    in a,(ATARI)
    bit 1,a
    ld a,e
    jr z,bit1z
    and a,0x8f
bit1z:
    ld i,a
    in a,(0xf0)
    out (0xf0),a
    ; rst 8
    ; call calltest
    ; call calltest
    ; call calltest
    ; call calltest
    ; call calltest
    jp readatari


nmitriggered:
    ld d,5
    ld a,0xff
    ld i,a
    ld e,0x10
loop3:
    djnz loop3
    dec e
    jr nz,loop3
    ld a,0x8f
    ld i,a
    ld e,0x10
loop4:
    djnz loop4
    dec e
    jr nz,loop4
    dec d
    ; jp nz,nmitriggered
    jp nmitriggered

ROMNMI:
    jp RAMinit

calltest:
    ld a,0x8f
    ld i,a
    ld e,0x10
loop5:
    djnz loop5
    dec e
    jr nz,loop5
    ld a,0xf8
    ld i,a
