    .org 0x100
testcode:
    add 1
    daa
    ld i,a
waitamoment:
    djnz waitamoment
    dec d
    jp nz,waitamoment
    jp testcode
    out (GOUSR),a
    out (GOUSR),a
RAMinit:
    ld sp,0xffff
    ld bc,0
loop0:
    djnz loop0
    ld c,PAGEL
    ld b,0
    ld a,0
    out (c),a
    ld b,1
    ld a,1
    out (c),a
    ld b,2
    ld a,2
    out (c),a    
    ld b,3
    ld a,3
    out (c),a
    ld c,PAGEH
    ld b,0
    ld a,0x70
    out (c),a
    ld b,1
    out (c),a
    ld b,2
    out (c),a
    ld b,3
    out (c),a
    ld bc,0x200
    ld de,0
    ld hl,0
    ldir
    ld hl,nmitriggered
    ld (0x0067),hl
    in a,(RAMEN)
nmiexit:
    ; out (CLRINT),a
